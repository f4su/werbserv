<server>
    host = 127.0.0.1
    port = 8080
    server_names = localhost
    client_max_body_size = 100000000000000
    allow_listing = true
    index = /index.html



    <route path="/">
    		root = .
    		index = /www/index.html
    		allow_listing = false
    		error_pages = 404:www/error_pages/404.html 500:www/error_pages/500.html
    </route>	
	






    <route path="/list">
    		root = .
    </route>

    <route path="/listErrorPages">
    		root = www/error_pages
    		allow_listing = true
    </route>

    <route path="/listCgis">
        root = www/cgi_scripts
        allow_listing = true
    </route>




    <route path="/redirect">
        redirect = /redirected
    </route>
	
    <route path="/redirected">
        root = redir
				index = /redirected.html
    		allow_listing = false
    </route>




    <route path="/kapouet">
        root = tmp/www
    		allow_listing = false
    </route>
	


    <route path="/curlPostOnly">
        root = www/uploads
        upload_dir = www/uploads/uploaded
        methods = POST
    		allow_listing = false
    </route>

    <route path="/getOnly">
        root = www/uploads/uploaded
        methods = GET
    		allow_listing = false
    </route>
	
    <route path="/curlDeleteOnly">
        root = www/uploads/uploaded
        methods = DELETE
    		allow_listing = false
    </route>




    <route path="/browserPost">
        root = www/uploads
        methods = POST, GET
        upload_dir = www/uploads/uploaded
        index = /uploads.html
    		allow_listing = false
    </route>
	



    <route path="/cgi_scripts">
        root = www/cgi_scripts
        methods = GET, POST, DELETE
        cgi = .php:cgi-bin/php-cgi, .py:/usr/local/bin/python3
        allow_listing = false
    </route>
    
    <route path="/postCgi">
        root = www/cgi_scripts
        methods = POST, GET, DELETE
        index = /F_Post.php
        cgi = .php:cgi-bin/php-cgi, .py:/usr/local/bin/python3
    		allow_listing = false
    </route>

</server>

<server>
    host = 127.0.0.1
    port = 3030
    server_names = localhost
    client_max_body_size = 100000
    error_pages = 404:www/error_pages/404.html
    <route path="/">
    		root = www
    		index = /idk.html
    </route>
</server>
